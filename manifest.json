{
    "manifest_version": 2,
    "version": "0.0.3",
    "name": "PixPeeker",
    "description": "Hover Over links to see images overlaid on current page",
    "browser_action": {
        "default_icon": "media/on.png",
        "default_title": "PixPeeker"
    },
    "permissions": [
        "webNavigation"
    ],
    "background": {
        "scripts" : ["events.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["app.js"]
        }
    ]
}